{
  "name": "promptu",
  "version": "2.0.1",
  "description": "Micro CSS-in-JS library",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "docs": "rimraf docs && typedoc --excludeExternals --excludeNotExported --hideGenerator --name Promptu --out docs ./src/core",
    "build": "npm run clean && webpack --config config/build.conf.ts",
    "test": "mocha --require ts-node/register --timeout 10000 --reporter spec --full-trace --colors --recursive --bail --exit \"tests/**/*.ts\"",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/promptu.git"
  },
  "keywords": [
    "css",
    "js"
  ],
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/promptu/issues"
  },
  "homepage": "https://github.com/andrewscwei/promptu#readme",
  "devDependencies": {
    "@types/compression-webpack-plugin": "^2.0.1",
    "@types/css-tree": "^1.0.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@types/webpack": "^4.39.3",
    "@types/webpack-env": "^1.14.1",
    "@types/webpack-node-externals": "^1.6.3",
    "compression-webpack-plugin": "^3.0.0",
    "css-tree": "^1.0.0-alpha.36",
    "mocha": "^6.2.1",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-node-externals": "^1.7.2"
  },
  "types": "build/index.d.ts"
}
